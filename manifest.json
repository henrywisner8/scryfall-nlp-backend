{
  "manifest_version": 3,
  "name": "Scryfall Natural Language Search",
  "version": "1.0.0",
  "description": "Search Magic cards on Scryfall using plain English.",
  "action": { "default_popup": "popup.html" },
  "permissions": ["storage"],
  "host_permissions": [
    "https://scryfall.com/*",
    "https://scryfall-nlp-backend-production.up.railway.app/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://scryfall.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://scryfall-nlp-backend-production.up.railway.app;"
  }
}
